<div class = "container text-center">
    <h1>WikiMe Member List</h1>
</div>
  <br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>User_id</th>
      <th>Select to Collaborate</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.id %></td>
        <td>
          <% unless @wiki.users.include? user %>
          <%= link_to "Add as Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: "btn btn-success" %>
          <% else %>
            <%= link_to "Remove as Collaborator", wiki_collaborator_path(@wiki, @wiki.collaborator_for(user)), method: :delete, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>  
</table>

